<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
		<link
		rel="stylesheet" href="{{ asset('css/style.css')}}">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<header class="header border-bottom mb-5 p-1">
			<nav class="navbar navbar-default navbar-fixed-top navbar">
				<a href="{{path('main')}}" class="text-decoration-none">
					<img src="{{ asset('img/logo/logo.jpg') }}" alt="" width="70"/>Accueil
				</a>
				<form action="{{ path('search')}}" method="get">
					<div class="input-group">
						<input type="text" name="search" placeholder="Recherche" class="form-control search-input">
						<input type="submit" class="btn btn-outline-primary" value="Recherche">
					</div>
				</form>
				<div class="d-flex justify-content-between gap-3">
					<a href="{{path('category_list')}}" class="text-decoration-none">
						Categories
					</a>
					<a href="{{path('licence_list')}}" class="text-decoration-none">
						Licences
					</a>
					{% if app.user %}
						{% if app.user.roles[0] == 'ROLE_ADMIN' %}
							<a href="{{path('admin_main')}}" class="text-decoration-none">
								Administration
							</a>
						{% endif %}
						<a href="{{path('update_user')}}" class="text-decoration-none">
							Mon compte
						</a>
						<a href="{{path('app_logout')}}" class="text-decoration-none">
							Logout
						</a>
					{% else %}
						<a href="{{path('app_login')}}" class="text-decoration-none">
							Sign up / Sign in
						</a>
					{% endif %}
				</div>
				<a href="#" class="btn btn-outline-primary">
					<i class="bi bi-cart2"></i>
				</a>
			</nav>

			<nav class="navbar navbar-default navbar-fixed-top navbar">
				{% for category in gcategories.getAll %}
					<a href="{{ path('category_list') }}" class="text-decoration-none">
						{{ category.name }}
					</a>
				{% endfor %}
				{% for licence in glicences.getAll %}
					<a href="{{ path('licence_list') }}" class="text-decoration-none">
						{{ licence.name }}
					</a>
				{% endfor %}
			</nav>
		</header>

		{% for message in app.flashes('notice') %}
			<div class=" alert alert-success alert-dismissible fade show w-75 m-auto" role=" alert">
				{{ message }}
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}

		{% block body %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
		<script src="{{ asset('/js/like.js') }}"></script>
	</body>
</html></body></html>
