{% extends 'front/base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<div class="container d-flex justify-content-around gap-3">
		{% for product in products %}
			<div class="card text-center" style="width: 18rem;">
				{% for image in product.images %}
					<img src="{{ asset('upload/'~image.src) }}" class="card-img-top" alt=" {{ image.alt }}">
				{% endfor %}
				<div class="card-body">
					<h1 class="card-title">{{ product.name }}</h1>
					<h4 class="card-title">{{ product.category.name }}</h4>
					<h4 class="card-title">{{ product.licence.name }}</h4>
					<p class="card-text">{{ product.price }}</p>
					<p class="card-text">{{ product.stock }}</p>
					<a href="{{ path('product_show', { 'id' : product.id }) }}" class="btn btn-outline-primary">Selectionner</a>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
