{% extends 'front/base.html.twig' %}

{% block title %}Licence
{% endblock %}

{% block body %}

	<div class="container mt-3">

		<div>
			<a href="{{ path('main') }}" class="btn btn-outline-primary">
				Accueil
			</a>
			<a href="{{ path('licence_list') }}" class="btn btn-outline-primary">
				Liste des licences
			</a>
		</div>

