{% extends 'admin/base.html.twig' %}

{% block title %}Produits!
{% endblock %}

{% block body %}

	<div class="container p-3 mt-5">
		{% for message in app.flashes('notice') %}
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				{{ message }}
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}

		<div class="my-3">
			<a href="{{ path('admin_main') }}" class="btn btn-outline-primary">
				Accueil
			</a>
			<a href="{{ path('admin_create_product') }}" class="btn btn-outline-primary">
				Ajouter<i class="bi bi-plus-circle-dotted ms-2"></i>
			</a>
		</div>

		<table class="table table-hover text-center">
			<thead>
				<tr>
					<th scope="col">Nom</th>
					<th scope="col">Description</th>
					<th scope="col">Media</th>
					<th scope="col">Modifier</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for product in products %}
					<tr>
						<td>{{ product.name }}</td>
						<td>{{ product.price }}</td>
						<td>{{ product.stock }}</td>
						<td>{{ product.licence.name }}</td>
						<td>{{ product.category.name }}</td>
						<td>
							<a href="{{ path('admin_update_product', { 'id' : product.id }) }}">
								<i class="bi bi-pencil-square"></i>
							</a>
						</td>
						<td>
							<a href="{{ path('admin_delete_product', { 'id' : product.id }) }}">
								<i class="bi bi-trash text-danger"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
